  <section class="menu">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">

          <ul class="navbar-nav mx-auto">

            {% for link in linklists[section.settings.test_linklist].links  %}

            {% comment %} 
                  direct menu without submenu
             {% endcomment %}

            {%  if link.links == blank %}
            <li class="nav-item active">
              <a class="nav-link" href="{{ link.url }}">{{ link.title }} <span class="sr-only">(current)</span></a>
            </li>
            {% endif %}


     {% comment %} submenu {% endcomment %}

                {% if link.links != blank %}

                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ link.title }}
                  </a>


                  <div class="dropdown-menu full-width" aria-labelledby="navbarDropdown">
                    <div class="row">

                    {%  for submenu in link.links %}
                      <div class="col-4">

                        <div class="dropdown-header">{{ submenu.title }}</div>
                        <div class="dropdown-divider"></div>

                        {%  for submenu_link in submenu.links %}
                        <a href="{{ submenu_link.url }}">{{  submenu_link.title  }}</a>
                        {% endfor %}
                   
                      </div>
                      {%  endfor %}
  

                    </div>
                  </div>
                </li>

                {% endif %}

               
           {%  endfor %}

          
          </ul>


        </div>
      </nav>
    </div>
  </section>
